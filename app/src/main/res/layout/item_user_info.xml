<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_marginLeft="@dimen/margin"/>
        <TextView
            android:id="@+id/txt_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/yellow"
            android:lines="1"
            android:padding="@dimen/margin_l"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_login_time"
            android:layout_marginLeft="@dimen/margin"/>
        <TextView
            android:id="@+id/txt_login_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:lines="1"
            android:textColor="@color/yellow"
            android:padding="@dimen/margin_l"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line"
        android:layout_marginTop="180px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30px">
        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/txt_modify"
            android:text="@string/modify_psw"
            android:layout_gravity="center_horizontal"
            style="@style/btn_sure"
            android:layout_marginRight="@dimen/margin_l"/>
        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/txt_logout"
            android:text="@string/user_logout"
            android:layout_gravity="center_horizontal"
            style="@style/btn_sure"
            android:layout_marginLeft="@dimen/margin_l"/>
    </LinearLayout>


</LinearLayout>
