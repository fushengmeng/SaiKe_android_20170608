<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300px"
    android:layout_height="400px"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="?attr/custom_attr_color_primary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playlist_addto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/music_list"
            android:layout_marginLeft="@dimen/margin_l"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/play_list_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/playlist_clear_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sk_leku_14"
            android:paddingLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:text="@string/clear"
            android:gravity="right|center_vertical"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.keruiyun.saike.uiview.ListScrollView
            android:id="@+id/listscrollview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.keruiyun.saike.uiview.ListViewBar
                    android:id="@+id/play_list"
                    android:layout_width="match_parent"                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scrollbars="none"/>

            </LinearLayout>
        </com.keruiyun.saike.uiview.ListScrollView>
        <com.keruiyun.saike.uiview.SaikeScollBar
            android:id="@+id/scollbar"
            android:layout_width="24px"
            android:layout_height="match_parent"
            android:layout_marginTop="24px"
            android:layout_marginBottom="24px"
            android:layout_marginRight="@dimen/margin_l"/>

    </LinearLayout>

</LinearLayout>