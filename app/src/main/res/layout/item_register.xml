<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_marginLeft="@dimen/margin"/>
        <EditText
            android:id="@+id/input_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="?android:attr/textColor"
            android:lines="1"
            android:padding="@dimen/margin_l"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_psw"
            android:layout_marginLeft="@dimen/margin"/>
        <EditText
            android:id="@+id/input_user_psw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="?android:attr/textColor"
            android:lines="1"
            android:inputType="numberPassword"
            android:padding="@dimen/margin_l"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_pswsure"
            android:layout_marginLeft="@dimen/margin"/>
        <EditText
            android:id="@+id/input_user_pswsure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="?android:attr/textColor"
            android:lines="1"
            android:inputType="numberPassword"
            android:padding="@dimen/margin_l"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line"/>

    <RadioGroup
        android:id="@+id/group_usertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin">
        <android.support.v4.widget.Space
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="1px" />
        <RadioButton
            android:id="@+id/box_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="right|center_vertical"
            android:drawableRight="@drawable/checkbox"
            android:textColor="?android:attr/textColor"

            android:text="@string/administrator"/>
        <android.support.v4.widget.Space
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="1px" />
        <RadioButton
            android:id="@+id/box_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="@drawable/checkbox"
            android:textColor="?android:attr/textColor"
            android:checked="true"
            android:text="@string/operator"/>
        <android.support.v4.widget.Space
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="1px" />
        <RadioButton
            android:id="@+id/box_superadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:visibility="gone"
            android:drawableRight="@drawable/checkbox"
            android:textColor="?android:attr/textColor"
            android:checked="false"
            android:text="@string/superadmin"/>
        <android.support.v4.widget.Space
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="1px" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line"/>

    <com.bilibili.magicasakura.widgets.TintTextView
        android:id="@+id/txt_register"
        android:text="@string/register"
        android:layout_gravity="center_horizontal"
        style="@style/btn_sure"
        android:layout_marginTop="24px"/>
</LinearLayout>
