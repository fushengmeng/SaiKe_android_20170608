<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800px"
    android:layout_height="600px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/Setting_Title"
        android:text="@string/phone_call"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:orientation="horizontal">
        <com.keruiyun.saike.uiview.GridViewBar
            android:id="@+id/gridview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:numColumns="3"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:horizontalSpacing="@dimen/margin_l"
            android:verticalSpacing="@dimen/margin_l"></com.keruiyun.saike.uiview.GridViewBar>

        <com.keruiyun.saike.uiview.SaikeScollBar
            android:id="@+id/scollbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="24px"
            android:layout_marginBottom="24px"
            />
    </LinearLayout>




</LinearLayout>
