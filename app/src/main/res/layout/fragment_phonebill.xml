<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800px"
    android:layout_height="600px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/Setting_Title"
        android:text="@string/phone_call"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.keruiyun.saike.uiview.ListScrollView
            android:id="@+id/listscrollview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.keruiyun.saike.uiview.GridViewBar
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:horizontalSpacing="8px"
                    android:verticalSpacing="8px"></com.keruiyun.saike.uiview.GridViewBar>


            </LinearLayout>
        </com.keruiyun.saike.uiview.ListScrollView>
        <com.keruiyun.saike.uiview.SaikeScollBar
            android:id="@+id/scollbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="24px"
            android:layout_marginBottom="24px"
            android:layout_marginRight="@dimen/margin_l"/>

    </LinearLayout>






</LinearLayout>
